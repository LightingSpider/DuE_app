<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120031"
    android:foregroundTint="#91225C"
    tools:context=".LoadingLocactionSplashScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Trying to locate you"
        android:textColor="#A9A5FF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#91225C"
        android:foregroundTint="#91225C"
        android:indeterminateTint="#91225C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Please wait"
        android:textColor="#A9A5FF"
        android:textSize="24sp" />
</RelativeLayout>